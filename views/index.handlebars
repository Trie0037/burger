

<h1 class="cheeseburger" style="text-align: center;">Burger-Time!</h1>
<div class="container" style="background-color: brown; padding: 25px; margin-bottom: 50px;">
  <div class="jumbotron" style="background-color: rgb(240, 211, 49);padding: 15px;">
    <h1 id="pageTitle" style="font-size: 20px;">Eat-Da-Burger</h1>
    <img id="mainImg" src="assets/css/images/burger.png" style="width: 100%;">
  </div>
    <hr>
    <form class="create-form">
      <div class="row">
        <div class="col-md-6">
          <h2>Add a Burger +</h2>

        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name" style="background-color: rgb(214, 110, 5);">
            <button type="submit" style="background-color:rgb(240, 211, 49);">Add Burger</button>
          </div>

        </div>
      </div>
    </form>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <h2 style="text-align: center">- Burgers to Eat:</h2>

        {{#each burgers}} {{#unless devoured}}

        <p class="burger">
          {{this.id}}. {{this.burger_name}}
          <button data-id="{{this.id}}" class="devourBurger btn btn-danger" style="background-color: rgb(214, 110, 5);">Devour!</button>
        </p>
        <hr>

        {{/unless}} {{/each}}
       
      </div>
      <div class="col-md-6">
        <h2 style="text-align: center">Burgers Devoured:</h2>


         {{#each burgers}} {{#if devoured}}

         <p class="burger eaten">
          {{this.id}}. {{this.burger_name}}
         </p>
         <hr>

         {{/if}} {{/each}}
        </div>
         
      </div>
    </div>
  </div>
</div>

